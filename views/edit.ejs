<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Display Creature</title>
</head>
    <body style="background-color: rgb(37, 36, 36);">
    <%- include ('./partials/navbar.ejs') %>

    <div class="container" style="margin-top:75px;">
        <div>
            <figure>
                <h2><%= creature.name %> </h2>
                <img src="<%= creature.img %>" alt="images">
                
                <div class="overlay">
                    <div class="info">
                        <div class="container" style="text-align: left; margin-top: 50px;">
                            <form action="/sightings/<%=creature.id%>?_method=PUT" method="POST" method="POST">
                                <div class="form-group">
                                    <label for="location">Country</label>
                                    <input type="text" name="location" id="location" placeholder="Where was it seen ..">
                                </div>
                                <div class="form-group">
                                    <label for="environment">Environment</label>
                                    <input type="text" name="environment" id="environment" placeholder="Prefered habit..">
                                </div>
                                <div class="form-group">
                                    <label for="kind">Kind</label>
                                    <select multiple class="form-control" name="kind" id="kind">
                                        <option>Ghost</option>
                                        <option>Spirit</option>
                                        <option>Fairy</option>
                                        <option>Alpha</option>
                                        <option>Creature</option>
                                        <option>Primordial</option>
                                        <option>Unknown</option>
                                        <option></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea name="description" class="form-control" id="description" cols="5" rows="5"></textarea>
                                </div>
                                <div>
                                    <input type="submit" value="Update Archive" class="btn btn-warning">
                                </div>
                            </form>
                        </div>
                    </div>
                </figure>
            </div>
        </div>
    </body>
</html>